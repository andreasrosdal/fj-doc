  <admeta:admSection>
    <admeta:name>meta_general</admeta:name>
    <admeta:description>Properties for generic metadata</admeta:description>
    <admeta:admMetaInfo>
      <admeta:name>doc-title</admeta:name>
      <admeta:description>Set the document title, should be usually supported in document formats like html or pdf</admeta:description>
      <admeta:since>1.0.0</admeta:since>
      <admeta:supportedType>html</admeta:supportedType>
      <admeta:supportedType>pdf</admeta:supportedType>
      <admeta:supportedHandler>fj-doc-freemarker(html)</admeta:supportedHandler>
      <admeta:supportedHandler>fj-doc-mod-fop(pdf)</admeta:supportedHandler>
    </admeta:admMetaInfo>
  </admeta:admSection>

  <admeta:admSection>
    <admeta:name>meta_fixed</admeta:name>
    <admeta:description>Properties specific to fixed size formats (like PDF)</admeta:description>
    <admeta:admMetaInfo>
      <admeta:name>margins</admeta:name>
      <admeta:description>Document page margins, in pixels, in the format LEFT;RIGHT;TOP;BOTTOM</admeta:description>
      <admeta:defaultValue>10;10;10;10</admeta:defaultValue>
      <admeta:since>1.0.0</admeta:since>
      <admeta:supportedType>pdf</admeta:supportedType>
      <admeta:supportedHandler>fj-doc-mod-fop(pdf)</admeta:supportedHandler>
    </admeta:admMetaInfo>
    <admeta:admMetaInfo>
      <admeta:name>page-width</admeta:name>
      <admeta:description>Page width, in cm, for example 21cm for A4 portrait or 29.7cm for A4 landscape</admeta:description>
      <admeta:defaultValue>21cm</admeta:defaultValue>
      <admeta:since>1.0.0</admeta:since>
      <admeta:supportedType>pdf</admeta:supportedType>
      <admeta:supportedHandler>fj-doc-mod-fop(pdf)</admeta:supportedHandler>
    </admeta:admMetaInfo>
    <admeta:admMetaInfo>
      <admeta:name>page-height</admeta:name>
      <admeta:description>Page height, in cm, for example 29.7cm for A4  or 21cm for A4 landscape</admeta:description>
      <admeta:defaultValue>29.7cm</admeta:defaultValue>
      <admeta:since>1.0.0</admeta:since>
      <admeta:supportedType>pdf</admeta:supportedType>
      <admeta:supportedHandler>fj-doc-mod-fop(pdf)</admeta:supportedHandler>
    </admeta:admMetaInfo>
    <admeta:admMetaInfo>
      <admeta:name>page-orient</admeta:name>
      <admeta:description>Page orientation, 'vertical' for portrait or 'horizontal' for landscape</admeta:description>
      <admeta:defaultValue>vertical</admeta:defaultValue>
      <admeta:since>1.0.0</admeta:since>
      <admeta:supportedType>pdf</admeta:supportedType>
      <admeta:supportedHandler>fj-doc-mod-openpdf(pdf)</admeta:supportedHandler>
      <admeta:supportedHandler>fj-doc-mod-itext(pdf)</admeta:supportedHandler>
    </admeta:admMetaInfo>
