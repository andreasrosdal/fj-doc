<?xml version="1.0" encoding="utf-8"?>
<doc xmlns="http://javacoredoc.fugerit.org"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://javacoredoc.fugerit.org https://www.fugerit.org/data/java/doc/xsd/doc-2-0.xsd">

	<metadata>

		<!-- Margin for document : left;right;top;bottom -->
		<info name="margins">10;10;10;30</info>

		<info name="excel-table-id">excel-table=print</info>
		<info name="excel-width-multiplier">450</info>

		<header numbered="true">
			<para align="center">Header, page ${currentPage}</para>
		</header>

		<footer numbered="true">
			<para align="center">Footer, page ${currentPage}</para>
		</footer>

	</metadata>

	<body>

		<para align="center">Para center</para>
		<para align="left">Para left</para>
		<para align="right">Para right</para>
		<para align="justify">Para justify</para>
		<para align="justifyall">Para justifyall</para>

	</body>

</doc>